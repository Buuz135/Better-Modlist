$C = "../Common.ui";

$C.@PageOverlay {
  Anchor: (Top: 40);

  $C.@Container {
    Anchor: (Width: 600, Height: 669);

    #Title {
      Group {
        $C.@Title {
          @Text = "MODLIST";
        }

        $C.@HeaderSearch {}
      }
    }

    #Content {
      LayoutMode: Left;

      Group #Main {
        LayoutMode: Top;

        Group {
          LayoutMode: Left;
          Anchor: (Bottom: 15);
          Label {
            FlexWeight: 1;
          }

          $C.@CheckBoxWithLabel #ShowOnlyWithDesc{
            @Text = "Show Only Mods With Descriptions";
          }
        }

        Group #ModList {
          Anchor: (Width: 580);
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          Padding: (Left: 4);
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #ModCards {
            LayoutMode: Top;
          }
        }
      }
    }
  }
}

$C.@BackButton {}